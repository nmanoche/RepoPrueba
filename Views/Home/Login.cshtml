<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>Login - SB Admin</title>
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="bootstrap" />
    </head>

<body class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                    <div class="card-body">
                                        <form action="@Url.Action("Login", "Home")" method="post">
                                            <div class="form-floating mb-3">
                                                <input class="form-control" name="correo" type="email" placeholder="name@example.com" />
                                                <label for="inputEmail">Correo Eletrónico</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" name="contrasena" type="password" placeholder="Contraseña" />
                                                <label for="inputPassword">Contraseña</label>
                                            </div>

                                        @{
                                            if(ViewBag.Error != null)
                                            {
                                                <div class="form-floating mb-3">
                                                    <div class="alert alert-danger" role="alert">
                                                      @ViewBag.Error
                                                    </div>
                                                </div>
                                            }
                                        }
                                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                                <button type="submit" class="btn btn-primary" >Iniciar Sesión</button>
                                                <a class="btn btn-primary" href="@Url.Action("RegistrarUsuario", "Home")" >Registrarse</a>
                                            </div>
                                        </form>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
    </body>
    