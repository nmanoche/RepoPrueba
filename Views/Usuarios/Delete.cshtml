@model CarritoDeCompras.Areas.Identity.Data.IdentityUsuario

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Usuario</h1>

<br />
<div>
    <h4>Detalles del usuario a eliminar</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            <label>Correo Electrónico</label>
            @*@Html.DisplayNameFor(model => model.Correo)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            <label>Nombre de Usuario</label>
            @*@Html.DisplayNameFor(model => model.Contrasena)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="IndexIdentity" type="button" class="btn btn-secondary"><i class="fa-solid fa-circle-arrow-left"></i> Volver</a>
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
